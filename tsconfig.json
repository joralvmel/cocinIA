{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@/components": ["./src/components"],
      "@/components/*": ["./src/components/*"],
      "@/features": ["./src/features"],
      "@/features/*": ["./src/features/*"],
      "@/hooks": ["./src/hooks"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/services": ["./src/services"],
      "@/services/*": ["./src/services/*"],
      "@/stores": ["./src/stores"],
      "@/stores/*": ["./src/stores/*"],
      "@/types": ["./src/types"],
      "@/types/*": ["./src/types/*"],
      "@/utils": ["./src/utils"],
      "@/utils/*": ["./src/utils/*"],
      "@/constants": ["./src/constants"],
      "@/constants/*": ["./src/constants/*"],
      "@/i18n": ["./src/i18n"],
      "@/i18n/*": ["./src/i18n/*"],
      "@/assets": ["./src/assets"],
      "@/assets/*": ["./src/assets/*"],
      "@/contexts": ["./src/contexts"],
      "@/contexts/*": ["./src/contexts/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}